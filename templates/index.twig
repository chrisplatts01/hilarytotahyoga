{% extends "layouts/base.twig" %}

{% block content %}
	<h1 class="article-h1">Latest news</h1>
	{% for post in posts %}
		{% include ['tease-'~post.post_type~'.twig', 'partials/tease.twig'] %}
	{% endfor %}

	{% include 'partials/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
